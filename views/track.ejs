    <style>
        .Shipping_contain {
            background: #333333;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: 'Arial', sans-serif;
        }

        .tracking-container {
            background: #ffffff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 400px;

        }

        .tracking-title {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
        }

        .tracking-input {
            margin-bottom: 20px;
        }

        .btn-animate {
            position: relative;
            background: #5a6c8f;
            border: none;
            padding: 12px 20px;
            color: #fff;
            border-radius: 5px;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .btn-animate:hover {
            background: #7b9bdb;
        }

        .btn-animate::before {
            content: '';
            position: absolute;
            width: 300%;
            height: 300%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0);
            background: rgba(255, 255, 255, 0.5);
            border-radius: 50%;
            transition: transform 0.5s ease;
        }

        .btn-animate:hover::before {
            transform: translate(-50%, -50%) scale(1);
        }
    </style>

    <body>

