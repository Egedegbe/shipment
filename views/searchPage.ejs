<%- include('./partials/head.ejs') %>

<body>
    <div class="site-wrap">
        <div class="site-mobile-menu">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>
        <%- include('partials/nav.ejs') %>

        <div class="container">
            <!-- Banner Section -->
            <div class="banner">
                <h2>Order Tracking: <%= packageDetails.trackingNumber %></h2>
                <p>Expected Delivery Date: <%=packageDetails.formattedExpectedDeliveryDate%> |     Status: <%= latestStatus %> | Date Shipped: <%=packageDetails.formattedShipmentDate%></p>
            </div>

            <!-- Responsive Boxes Section -->
            <div class="row mt-4">
                <!-- Shipment Details Box -->
                <div class="col-md-4">
                    <div class="responsive-box">
                        <h5 class="box-title">Shipment Details</h5>
                        <p class="info-text"><strong>Package Name:</strong> <%=packageDetails.packageName%></p>
                        <p class="info-text"><strong>Package Value:</strong> <%=packageDetails.packageValue%></p>
                        <p class="info-text"><strong>Weight:</strong> <%=packageDetails.weight%>kg</p>
                        <p class="info-text"><strong>Service Type:</strong> <%=packageDetails.shippingMethod%></p>
                        <p class="info-text"><strong>Description:</strong> <%=packageDetails.packageDescription%></p>
                        <p class="info-text"><strong>Insurance:</strong> Yes</p>
                        <p class="info-text"><strong>Payment Method:</strong> Card</p>
                    </div>
                </div>

                <!-- Destination Details Box -->
                <div class="col-md-4">
                    <div class="responsive-box">
                        <h5 class="box-title">Destination Details</h5>
                        <p class="info-text"><strong>Receiver Name:</strong> <%packageDetails.recipientName%></p>
                        <p class="info-text"><strong>Receiver Email:</strong> <%=packageDetails.recipientEmail%></p>
                        <p class="info-text"><strong>Receiver Address:</strong> <%=packageDetails.recipientAddress%></p>
                        <p class="info-text"><strong>Expected Delivery Date:</strong> <%=packageDetails.formattedExpectedDeliveryDate%> </p>
                    </div>
                </div>

                <!-- Origin Details Box -->
                <div class="col-md-4">
                    <div class="responsive-box">
                        <h5 class="box-title">Origin Details</h5>
                        <p class="info-text"><strong>Sender Name:</strong> <%= packageDetails.senderName%></p>
                        <p class="info-text"><strong>Sender Address:</strong> <%=packageDetails.senderAddress%></p>
                        <p class="info-text"><strong>Shipment Date:</strong> <%=packageDetails.formattedShipmentDate%></p>
                    </div>
                </div>

                <!-- Package Image Box -->
                <div class="col-md-4 mt-4">
                    <div class="responsive-box">
                        <h5 class="box-title">Package Image</h5>
                        <img src="/uploads/<%= packageDetails.packageImage %>" alt="Package Image" class="package-image">

                    </div>
                </div>
            </div>

            <!-- History Summary Table Section -->
            <div class="table-container">
                <h5 class="mb-3">Shipment History</h5>
                <div class="table-responsive">
                    <table class="table table-hover table-responsive">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Location</th>
                                <th>Remark</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% packageDetails.history.forEach(entry => { %>
                                <tr>
                                    <td>
                                        <% if (entry.currentDate) { %>
                                            <%= new Date(entry.currentDate).toLocaleDateString() %>
                                        <% } else { %>
                                            No Date Available
                                        <% } %>
                                    </td>
                                    <td><%= entry.location %></td>
                                    <td><%= entry.notes %></td>
                                    <td><%= entry.status %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <%- include('./partials/footer.ejs') %>
    </div>

